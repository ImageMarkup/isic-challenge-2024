<div class="sticky top-0 z-40 w-full backdrop-blur flex-none transition-colors duration-500 lg:z-50  bg-opacity-90 backdrop-blur bg-base-100 text-base-content">
  <div class="max-w-8xl mx-auto">
    <div class="py-4 border-b border-slate-900/10 lg:px-8 lg:border-0 dark:border-slate-300/10 mx-4 lg:mx-0">
      <div class="relative flex items-center">
        <a class="mr-3 flex-none font-bold  overflow-hidden md:w-auto" href="{{ base.url }}/">
          <span class="sr-only">{{ site.title }}</span>
          {{ site.title }}
        </a>
        <div class="relative hidden lg:flex items-center ml-auto">
          <nav class="text-sm leading-6 font-semibold">
            <ul class="flex space-x-8">
              {% for pg in site.pages %}
                <li>
                  <a class="hover:text-sky-500 dark:hover:text-sky-400" href="{{ pg.url | relative_url }}">
                    {{- pg.title | capitalize -}}
                  </a>
                </li>
              {% endfor %}
              <li>
                <a href="https://forum.isic-archive.com" class="hover:text-sky-500 dark:hover:text-sky-400" target="_blank">Contact <i class="bi bi-box-arrow-up-right text-slate-400"></i></a>
              </li>
              <li>
                <a href="https://www.isic-archive.com/#!/topWithHeader/tightDarkContentTop/termsOfUse" class="hover:text-sky-500 dark:hover:text-sky-400" target="_blank">Terms of Use <i class="bi bi-box-arrow-up-right text-slate-400"></i></a>
              </li>
            </ul>
          </nav>
          <div class="flex items-center border-l border-slate-200 ml-6 pl-6 dark:border-slate-800">
            <label class="sr-only" id="headlessui-listbox-label-3" data-headlessui-state="">Theme</label>
            <select class="select select-sm select-ghost" data-choose-theme>
              <option disabled selected>Theme</option>
              <option value="">Auto</option>
              <option value="dark">Dark</option>
              <option value="light">Light</option>
            </select>
          </div>
        </div>
        <button
          type="button"
          class="ml-auto text-slate-500 w-8 h-8 -my-1 flex items-center justify-center hover:text-slate-600 lg:hidden dark:text-slate-400 dark:hover:text-slate-300"
        >
          <span class="sr-only">Search</span>
          <svg
            width="24"
            height="24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            aria-hidden="true"
          >
            <path d="m19 19-3.5-3.5"></path>
            <circle cx="11" cy="11" r="6"></circle>
          </svg>
        </button>
        <div class="dropdown dropdown-end lg:hidden">
          <label tabindex="0" class="btn btn-ghost btn-circle avatar">
            <span class="sr-only">Navigation</span>
            <svg width="24" height="24" fill="none" aria-hidden="true">
              <path
                  d="M12 6v.01M12 12v.01M12 18v.01M12 7a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm0 6a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm0 6a1 1 0 1 1 0-2 1 1 0 0 1 0 2Z"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
              ></path>
            </svg>
          </label>
          <ul
            tabindex="0"
            class="mt-3 p-2 shadow menu menu-compact dropdown-content rounded-box w-52 bg-opacity-90 backdrop-blur bg-base-100 text-base-content"
          >
            {% for pg in site.pages %}
              <li>
                <a class="hover:text-sky-500 dark:hover:text-sky-400" href="{{ pg.url | relative_url }}">
                  {{- pg.title | capitalize -}}
                </a>
              </li>
            {% endfor %}
            <li>
              <label class="sr-only" id="headlessui-listbox-label-3" data-headlessui-state="">Theme</label>
              <select class="select select-sm select-ghost" data-choose-theme>
                <option disabled selected>Theme</option>
                <option value="">Auto</option>
                <option value="dark">Dark</option>
                <option value="light">Light</option>
              </select>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
